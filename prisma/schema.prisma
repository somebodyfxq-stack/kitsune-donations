datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DonationIntent {
  id         Int             @id @default(autoincrement())
  identifier String          @unique
  nickname   String
  message    String
  amount     Int
  youtubeUrl String?         // YouTube URL для віджету
  createdAt  DateTime        @default(now())
  streamerId String
  streamer   User            @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  events     DonationEvent[] @relation("IntentEvents")
  
  @@index([streamerId, createdAt])  // Для пошуку intents по стрімеру
  @@index([streamerId])
}

model DonationEvent {
  id          Int             @id @default(autoincrement())
  identifier  String
  nickname    String
  message     String
  amount      Int
  monoComment String
  jarTitle    String?         // Назва банки на момент донату
  youtubeUrl  String?         // YouTube URL для віджету
  createdAt   DateTime        @default(now())
  intent      DonationIntent? @relation("IntentEvents", fields: [identifier], references: [identifier])
  streamerId  String
  streamer    User            @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@unique([identifier, createdAt])
  @@index([identifier])
  @@index([streamerId, createdAt])  // Для оптимізації listDonationEvents
  @@index([streamerId])             // Для загальних запитів по стрімеру
}

model Setting {
  key   String @id
  value String
}

model User {
  id               String            @id @default(cuid())
  name             String?           @unique
  email            String?           @unique
  emailVerified    DateTime?
  image            String?
  role             String            @default("streamer")
  accounts         Account[]
  sessions         Session[]
  monobankSettings MonobankSettings?
  youtubeSettings  YouTubeSettings?
  donationIntents  DonationIntent[]
  donationEvents   DonationEvent[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MonobankSettings {
  userId          String  @id
  token           String?
  jarId           String?
  jarTitle        String?
  jarGoal         Int?
  webhookId       String? @unique
  webhookUrl      String?
  webhookSecret   String? // Per-user секрет для верифікації webhook підпису
  obsWidgetToken  String? @unique // Унікальний токен для OBS віджета
  donationsPaused Boolean @default(false) // Чи призупинені донати для цього користувача
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model YouTubeSettings {
  userId               String  @id
  maxDurationMinutes   Int     @default(5)       // Максимальний час відео (у хвилинах)
  volume               Int     @default(50)      // Гучність 0-100
  showClipTitle        Boolean @default(true)    // Відображати назву кліпу
  showDonorName        Boolean @default(true)    // Відображати імя донатера
  minLikes             Int     @default(0)       // Мінімум лайків
  minViews             Int     @default(0)       // Мінімум переглядів
  minComments          Int     @default(0)       // Мінімум коментарів
  showImmediately      Boolean @default(false)   // Відображати новий донат одразу
  user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
